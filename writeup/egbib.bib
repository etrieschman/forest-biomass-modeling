	id = {Vorster2020},
	isbn = {1750-0680},
	journal = {Carbon Balance and Management},
	number = {1},
	pages = {8},
	title = {Variability and uncertainty in forest biomass estimates from the tree to landscape scale: the role of allometric equations},
	ty = {JOUR},
	url = {https://doi.org/10.1186/s13021-020-00143-6},
	volume = {15},
	year = {2020},
	Bdsk-Url-1 = {https://doi.org/10.1186/s13021-020-00143-6}}

